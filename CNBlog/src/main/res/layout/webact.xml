<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView android:id="@+id/web_tv"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:text="sdasdasd"
	    android:background="#785BC1"
	    android:textSize="20sp"
	    android:gravity="center_horizontal"/>
    <WebView 
        android:id="@+id/web"
        android:layout_below="@+id/web_tv"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"/>
	 <RelativeLayout
        android:id="@+id/right_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00ffffff"
        android:padding="5dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/blog_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:src="@drawable/comment_64" />

        <ImageView
            android:id="@+id/save_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_comment"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:src="@drawable/save_64" />

        
        
        <ImageView
            android:id="@+id/to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save_blog"
            android:clickable="true"
            android:src="@drawable/outbox_64" />
    </RelativeLayout>
    
</RelativeLayout>