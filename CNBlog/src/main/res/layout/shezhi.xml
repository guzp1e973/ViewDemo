<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#dbe5ce"
        android:text="滑动菜单皮肤管理"
        android:paddingLeft="5dp"
        android:textColor="#000000" />

    <GridView
        android:id="@+id/shezhi_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="10.0dip"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10.0dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#dbe5ce"
        android:text="系统设置"
        android:paddingLeft="5dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shezhi_tv_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="下载博主头像"
            android:textColor="#000000"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/shezhi_cb_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shezhi_tv_huyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="护眼模式"
            android:textColor="#000000"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/shezhi_cb_huyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:checked="false" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#dbe5ce"
        android:paddingLeft="5dp"
        android:text="其他"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/shezhi_tv_fankui"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="反馈"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/shezhi_tv_guanyu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="关于"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>